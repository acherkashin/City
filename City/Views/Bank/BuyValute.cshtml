
@{
    ViewBag.Title = "Купить валюту";
}

<div id="editBlock">
    <ul class="pager" style="text-align: left;">
        <li class="btn btn-lg"><a href="/Bank/ClientPage">Назад</a></li>
    </ul>
    
    <center><b>КУПИТЬ ВАЛЮТУ</b></center>
    <hr />

    <form method="post">
        <input type="hidden" value="@ViewBag.Id" name="Id" />
        <input type="hidden" value="@((Int32)TempData["Id"])" name="Client" />
        <center>
            <p>
                Укажите сумму валюты, необходимую для покупки:
                <input id="Text1" type="number" name="Summa" min="0" max="@((Double)TempData["MaxToBuy"])" required />
            </p>
        </center><br>
        <center> <p><input id="Submit2" type="submit" value="Купить" /></p></center>
    </form><br>
    <footer>
        <p align="right">&copy; @DateTime.Now.Day : @DateTime.Now.Month : @DateTime.Now.Year</p><br />
        <p align="right">@DateTime.Now.Hour : @DateTime.Now.Minute : @DateTime.Now.Second</p>
    </footer>
</div>

