
@{
    ViewBag.Title = "Взять кредит";
}

<div id="editBlock">
    <button href="/Bank/ClientPage">Назад</button>
    <center><b>ВЗЯТЬ КРЕДИТ</b></center>
    <hr />

    <form method="post">
        <input type="hidden" value="@ViewBag.Id" name="Id" />
        <input type="hidden" value="@((Int32)TempData["Id"])" name="Client" />
        <center>
            <p>
                Укажите сумму, которую Вы хотите взять в кредит:
                <input id="Text1" type="number" name="Summa" min="0" max="@((Double)TempData["Money"])" required />
            </p>
        </center><br>
        <center>
            <p>
                Укажите срок вклада в днях:
                <input id="Text2" type="number" name="Duration" min="1" max="31" required />
            </p>
        </center><br>
        <center> <p><input id="Submit2" type="submit" value="Взять кредит" /></p></center>
    </form><br>
    <footer>
        <p align="right">&copy; @DateTime.Now.Day  : @DateTime.Now.Month : @DateTime.Now.Year </p><br />
        <p align="right"> @DateTime.Now.Hour : @DateTime.Now.Minute : @DateTime.Now.Second</p>
    </footer>
</div>


